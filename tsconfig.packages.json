{
    "compilerOptions": {
      /* Basic Options */
      "target": "ES6",
      "module": "ESNEXT",
      "lib": [
        "ESNext"
      ],
      /* Strict Type-Checking Options */
      "strict": false,
      /* Module Resolution Options */
      "moduleResolution": "node",
      "esModuleInterop": true,
      /* Advanced Options */
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true
    }
  }